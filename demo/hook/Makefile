# iac.tender.pro backend Makefile
SHELL    = /bin/bash
PRG     ?= $(shell basename $$PWD)
CFG     ?= .config

APP_SITE ?= ci.dev.lan

CLOUD      ?= cloud1
CLOUD_ROOT ?= /opt

all: start

define CONFIG_DEF
# iac config file, generated by make $(CFG)
APP_SITE=$(APP_SITE)
endef

export CONFIG_DEF

req: vars
	@echo "*** $@ ***"
	@source $(CFG) && \
	curl -d '{"id": "test"}' http://$$APP_SITE/hooks/samplehook

start: vars
	@echo "*** $@ ***"
	@source $(CFG) && \
fidm rm mode=proxy name=$$APP_SITE ; \
fidm start mode=proxy name=$$APP_SITE

rm: $(CFG)
	@echo "*** $@ ***"
	@source $(CFG) && \
fidm $@ mode=proxy name=$$APP_SITE

rmall: $(CFG)
	@echo "*** $@ ***"
	@source $(CFG) && \
fidm rm -a mode=proxy name=$$APP_SITE

push:
	@echo "*** $@ ***"
	@rsync -cvzrptL --partial-dir=.rsync-partial *.* Makefile $(CLOUD):$(CLOUD_ROOT)/$(PRG)
	@echo "Done"

remote:
	@echo "*** $@ ***"
	echo "cd $(CLOUD_ROOT)/$(PRG) && make start" | ssh $(CLOUD) 'bash -s'
	echo "Done"

clean:
	@echo "*** $@ ***"
	[ ! -f $(CFG) ] || rm $(CFG)

vars: $(CFG) ~/.fidmrc

# настройка контейнеров consup
~/.fidmrc:
	@echo "*** $@ ***"
	@echo "cfg[creator]=lekovr" > $@

$(CFG):
	@echo "*** $@ ***"
	@[ -f $@ ] || echo "$$CONFIG_DEF" > $@

deps:
	@echo "*** $@ ***"
	# code from http://docs.docker.com/linux/step_one/
	which docker > /dev/null || wget -qO- https://get.docker.com/ | sh
	# code from https://github.com/LeKovr/fidm
	which fidm > /dev/null || wget -qO- https://raw.githubusercontent.com/LeKovr/fidm/master/install.sh | sh
	# Каталог **consup** дожен быть доступен из каталога **iac** как `../consup` или `../../consup`.
	cd .. &&[ -d consup ] || [ -d ../consup ] || git clone https://github.com/LeKovr/consup.git
	# контейнеры Docker
	for n in consul nginx webhook ; do docker pull lekovr/consup_$$n ; done
	@echo Done

.PHONY: all push remote build restore deps

